@model RSS.CompleteApp.ViewModels.SupplierViewModel

@{
    ViewData["Title"] = "Editar Fornecedor";
}

<h4>@ViewData["Title"]</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
           
            <label asp-for="IdentificationDocument" class="control-label"></label>
            <input asp-for="IdentificationDocument" class="form-control" />
            <span asp-validation-for="IdentificationDocument" class="text-danger"></span>
        </div>
    


        <div class="form-group col-md-6">
            <label asp-for="SupplierType" class="control-label"></label>
            <div>
                <input type="radio" value="1" asp-for="SupplierType" checked="@(Model.SupplierType == 1)" />Pessoa Física <br />
                <input type="radio" value="2" asp-for="SupplierType" checked="@(Model.SupplierType == 2)"/>Pessoa Jurídica
            </div>
            <div>
                &nbsp;
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

<div>
    <partial name="_AddressDetail"/>
</div>
<hr />
<h4>Produtos</h4>
<div>
    <partial name="../Product/_ProductList" model="@Model.Products"/>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
